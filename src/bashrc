# .bashrc

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

PLIBPATH=$HOME/.plexlib

# Load *.sh files from .plexlib/bash
if test -d $PLIBPATH/bash; then
        for file in $PLIBPATH/bash/*.sh; do
                test -r "$file" && . "$file"
        done
        unset file
fi
